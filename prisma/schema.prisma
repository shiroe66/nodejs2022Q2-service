generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String @id @default(uuid())
  login     String
  password  String
  version   Int    @default(1)
  createdAt Int
  updatedAt Int
}

model Artist {
  id          String      @id @default(uuid())
  name        String
  grammy      Boolean
  favourites  Favourites? @relation(fields: [favouriteId], references: [id], onDelete: SetNull)
  favouriteId String?
  Album       Album[]
  Track       Track[]
}

model Album {
  id          String      @id @default(uuid())
  name        String
  year        Int
  artist      Artist?     @relation(fields: [artistId], references: [id], onDelete: SetNull)
  artistId    String?
  favourites  Favourites? @relation(fields: [favouriteId], references: [id], onDelete: SetNull)
  favouriteId String?
  Track       Track[]
}

model Track {
  id          String      @id @default(uuid())
  name        String
  artist      Artist?     @relation(fields: [artistId], references: [id], onDelete: SetNull)
  artistId    String?
  album       Album?      @relation(fields: [albumId], references: [id], onDelete: SetNull)
  albumId     String?
  duration    Int
  favourites  Favourites? @relation(fields: [favouriteId], references: [id], onDelete: SetNull)
  favouriteId String?
}

model Favourites {
  id      String   @id @default(uuid())
  artists Artist[]
  albums  Album[]
  tracks  Track[]
}
